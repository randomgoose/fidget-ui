{
  "name": "fidget-ui",
  "version": "0.0.13",
  "description": "A component library for building Figma widgets.",
  "author": "Chen Chen",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "esbuild docs/index.tsx --bundle --outfile=preview/code.js --target=es6",
    "watch": "npm run build -- --watch",
    "rollup": "rollup -c",
    "prepare": "husky install",
    "format": "prettier --config --write \"src/**/*.{js,jsx,ts,tsx}\"",
    "eslint": "eslint src/ --fix --cache --quiet --ext .js,.jsx,.ts,.tsx"
  },
  "dependencies": {
    "chroma-js": "^2.4.2",
    "dayjs": "^1.11.7",
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@figma/plugin-typings": "*",
    "@figma/widget-typings": "*",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/chroma-js": "^2.1.4",
    "@types/lodash": "^4.14.191",
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.6",
    "esbuild": "*",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "prettier": "^2.7.1",
    "rollup": "^2.60.0",
    "rollup-plugin-dts": "^4.1.0",
    "tslib": "^2.4.1",
    "typescript": "^4.4.4"
  },
  "files": [
    "build",
    "icons"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "license": "MIT"
}
